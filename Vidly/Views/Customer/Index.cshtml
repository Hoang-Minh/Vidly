@model Vidly.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="page-header">
        <h1>Customer</h1>
    </div>
    @if (!Model.Customers.Any())
    {
        <h2>We don't have any customers yet</h2>
    }
    else
    {
        <table id="customers" class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Discount Rate</th>
                    <th>Membership Type</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td><a href="@Url.Action("Edit", "Customer", new {id = customer.Id})">@customer.Name</a></td>
                        <td>@customer.MembershipType.DiscountRate%</td>
                        <td>@customer.MembershipType.Name</td>
                        <td>
                            <button data-customer-id="@customer.Id" class="btn-link js-delete">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="text-center">
        <a class="btn btn-success btn-lg" href="@Url.Action("New", "Customer")"><strong>ADD CUSTOMER</strong></a>
    </div>

</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers").DataTable();
            $("#customers").on("click", ".js-delete",
                function () {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this customer ?", function(result) {
                        if (result) {
                            $.ajax({
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function() {
                                    button.parents("tr").remove();
                                },
                                error: function(error) {
                                    console.log(error);
                                }
                            });
                        }
                    });
                });
        });
    </script>
}
