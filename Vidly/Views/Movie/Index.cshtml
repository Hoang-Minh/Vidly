@model Vidly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <h1>Movie</h1>
    </div>
    @if (Model.Movies.Count == 0)
    {
        <h2>We don't have any movies yet</h2>
    }
    else
    {
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td>@movie.Id</td>
                        <td><a href="@Url.Action("Edit", "Movie", new {id = movie.Id})">@movie.Name</a></td>
                        <td>@movie.Genre.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="text-center">
        <a class="btn btn-success btn-lg" href="@Url.Action("Edit", "Movie", new {id = 0})"><strong>ADD MOVIE</strong></a>
    </div>




</div>


